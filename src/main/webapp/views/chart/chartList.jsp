<script>
$(document).ready(function() {
    const url = '/getOrgchart';
    getAjax(url, 'json'); // GET 요청으로 데이터 가져오기
});
function getSuccess(response) {
    console.log("서버 응답 데이터:", response);

    // OrgChart 데이터 변환
    const orgChartData = orgChart(response);

    // OrgChart 초기화
    new OrgChart(document.getElementById("orgchart"), {
        nodes: orgChartData,
        nodeBinding: {
            field_1: "title" // 노드에 표시될 직책
        }
    });
}
function orgChart(data) {
    return data.map(item => ({
        id: item.id,
        pid: item.parent || null, // 부모 ID
        name: item.name,
        title: item.text || "직책 없음"
    }));
}
</script>

